   }
   
   #location{
     margin-top: 60px;
     color: var(--location-color);
     font-size: 14px;
     text-align: center;
     font-family: sans-serif;
     font-weight: 300;
   }
   
   @media only screen and (min-width: 1000px) {
       
     #day {
      font-size: 22px;
       left: 2%;
     }
   
     #location{
      margin-top: 100px;
      font-size: 16px;
     }
     
     #profile{
        margin: auto;
        margin-left: auto;;
      margin-top: 40px;
